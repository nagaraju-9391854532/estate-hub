
<% layout('layouts/boilerplate')%>
<h2><%= property %> form</h2>
<% if(property=="plot"){ %>
    <form action="/properties/plot/<%= plot._id %>?_method=PUT" class="houseform" method="POST">
        <div class="container">
            <div class="common">
                <label for="title">Title</label>
                <input type="text" name="plot[title]" id="title" value="<%= plot.title %>">
            </div>
        <div class="area">
            <label for="plotarea">PlotArea in sqyd</label>
            <input type="number" step="0.01" name="plot[plotarea]" id="plotarea" value=<%= plot.plotarea %>>
        </div>
        <div class="lb">
            <div class="length">
                <label for="length">length</label>
                <input type="number" step="0.01" name="plot[length]" id="length" value=<%= plot.length %>>
            </div>
            <div class="breadth">
                <label for="breadth">breadth</label>
                <input type="number" step="0.01" name="plot[breadth]" id="breadth" value=<%= plot.breadth %>>
            </div>
        </div>
        <div class="common">
            <label for="facing">Facing(direction)</label>
            <input type="text" name="plot[facing]" id="facing" value=<%= plot.facing %>>
        </div>
        <div class="common">
        <label for="roadwidth">RoadWidth(feets)</label>
        <input type="number" name="plot[roadwidth]" id="roadwidth" value=<%= plot.roadwidth %>>
        </div>
        <div class="common">
        <label for="cornerPlot">CornerPlot</label>
        <select name="plot[cornerPlot]" id="cornerPlot">
            <option value="YES">yes</option>
            <option value="NO">No</option>
        </select>
        </div>
        <div class="common">
            <label for="location">Location</label>
            <input type="text" name="plot[location]" id="location" value=<%= plot.location %>>
            </div>
        <div class="common">
        <label for="address">Address</label>
        <input type="text" name="plot[address]" id="address" value="<%= plot.address %>">
        </div>
        <div class="common">
        <label for="description">Description</label>
        <textarea name="plot[description]" id="description" cols="10" rows="1"><%= plot.description %></textarea>
        </div>
        <div class="common">
        <label for="price">Price</label>
        <input type="number" name="plot[price]" id="price" value=<%= plot.price %>>
        </div>
        <div class="common">
        <label for="authorityapproved">Authority Approved</label>
        <select name="plot[authorityapproved]" id="authorityapproved">
            <option value="YES">yes</option>
            <option value="NO">No</option>
        </select>
        </div>
        <span>seller details</span>
        <div class="common">
            <label for="sname">Name</label>
            <input type="text" name="plot[sname]" id="sname" value=<%= plot.sname %>>
        </div>
        <div class="common">
            <label for="smobile">MobileNo</label>
            <input type="text" name="plot[smobile]" id="smobile" value=<%= plot.smobile %>>
        </div>
        <div class="common">
            <label for="semail">Email</label>
            <input type="email" name="plot[semail]" id="email" value=<%= plot.semail %>>
        </div>
        <button class="sub">submit</button>
    </div>
    </form>
<% } %>

