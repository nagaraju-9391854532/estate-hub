              </svg></i><span><%= plot.price %></span>
            
            <br>
            <a href="/properties/plot/<%= plot._id %>"><button class="bbutton">View</button></a>
        </div>
    
    <% } %>
    </div>
    
<form action="/properties/plot" method="get">
    <button>plots</button>
