
<% layout('layouts/boilerplate')%>



<h2>Houses</h2>

<div class="bbout">
<% for( let house of houses) { %>
   
    <div class="bouter">
        <img src="<%=house.images[0].url%>" height="180" width="250">
        <h1 class="bh1"><%= house.title %></h1>
        <h2 class="bh2">in <%= house.location %></h2>
        <i><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-currency-rupee" viewBox="0 0 16 16">
            <path d="M4 3.06h2.726c1.22 0 2.12.575 2.325 1.724H4v1.051h5.051C8.855 7.001 8 7.558 6.788 7.558H4v1.317L8.437 14h2.11L6.095 8.884h.855c2.316-.018 3.465-1.476 3.688-3.049H12V4.784h-1.345c-.08-.778-.357-1.335-.793-1.732H12V2H4z"/>
          </svg></i><span><%= house.price %></span>
        
        <br>
        <a href="/properties/house/<%= house._id %>"><button class="bbutton">View</button></a>
    </div>

<% } %>
</div>


<form action="/properties/house" method="get">
    <button>houses/villa</button>
</form>
